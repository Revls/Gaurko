<div class="wrapper">
  <header>
    <h1>Finanzas</h1>
  </header>
  <section class="row">
    {{#if authorizing}}
      Loading...
    {{else}}
      {{#if authorized}}
        <header class="span12">
          <h3> Welcome back {{currentUser.username}}</h3>
          <img {{bindAttr src="currentUser.img"}}>
        </header>
        <section class="span12">
          {{outlet}}
        </section>
      {{else}}
        <a href="/auth/twitter">
          <img src="https://dev.twitter.com/sites/default/files/images_documentation/sign-in-with-twitter-gray.png" alt="Sign in with Twitter">
        </a>
      {{/if}}
    {{/if}}
  </section>
</div>
